{
	"name": "narrow-minded",
	"description": "narrow-minded",
	"author": "Sebastian Sangervasi",
	"license": "MIT",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ssangervasi/narrow-minded.git"
	},
	"source": "src/index.ts",
	"main": "dist/index.js",
  "exports": "./dist/index.modern.js",
	"types": "dist/index.d.ts",
	"engines": {
		"node": ">12.0",
		"npm": ">6.0"
	},
	"scripts": {
		"build": "rm -rf dist/* && npm run build-node && npm run build-modern && npm run docs",
		"build-modern": "microbundle --target=node --format=modern",
		"build-node": "microbundle --target=node --format=cjs",
		"docs": "jsdoc -c jsdoc.json",
		"lint": "eslint --fix --cache src/**/*.ts tests/**/*.ts",
		"jest": "jest --runTestsByPath",
		"jest-watch": "jest --watch --runTestsByPath",
		"test": "jest tests/*",
		"test-watch": "jest --watch tests/*",
		"watch": "tsc-watch"
	},
	"devDependencies": {
		"@babel/types": "^7.15.0",
		"@types/jest": "^24.9.1",
		"@types/lodash": "^4.14.172",
		"@types/node": "^12.20.19",
		"@typescript-eslint/eslint-plugin": "^4.0",
		"@typescript-eslint/parser": "^4.0",
		"better-docs": "^2.3.2",
		"eslint": "^7.32",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^26.6.3",
		"jest-diff": "^26.6.2",
		"jsdoc": "^3.6.7",
		"lodash": "^4.17.21",
		"microbundle": "^0.13.0",
		"prettier": "2.4.1",
		"ts-jest": "^26.5.6",
		"ts-loader": "^6.2",
		"ts-node": "^8.10.2",
		"tsc-watch": "^2.4.0",
		"tsconfig-paths": "^3.10.1",
		"tslint": "^5.20.1",
		"typescript": "^4.4.2"
	}
}
