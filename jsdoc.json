{
	"tags": {
		"allowUnknownTags": ["optional"]
	},
	"plugins": ["node_modules/better-docs/typescript", "plugins/markdown"],
	"source": {
		"include": ["src"],
		"includePattern": "\\.(jsx|js|ts|tsx)$"
	},
	"opts": {
		"destination": "docs",
		"recurse": true,
		"template": "node_modules/better-docs",
		"readme": "./README.md"
	},
	"templates": {
		"search": true,
		"better-docs": {
			"title": "narrow-minded",
			"name": "narrow-minded",
			"navLinks": [
				{
					"label": "Repository",
					"href": "https://github.com/ssangervasi/narrow-minded"
				},
				{
					"label": "harmless.dev",
					"href": "https://www.harmless.dev"
				}
			]
		}
	}
}
